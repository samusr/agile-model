{
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"rules": {
		"no-console": "off",
		"semi": ["error", "always"],
		"handle-callback-err": "error"
	},
	"globals": {
		"MODELS_DIRECTORY": true,
		"MIGRATIONS_DIRECTORY": true,
		"DATABASE_DIRECTORY": true
	}
}
